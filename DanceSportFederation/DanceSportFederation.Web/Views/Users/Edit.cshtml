@model DanceSportFederation.Models.ViewModels.User.EditUserVm
@{
    ViewBag.Title = "Edit Profile";
}

<h2>Edit Profile</h2>
<hr />

@using (Html.BeginForm())
{
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(vm => vm.Name)
        @Html.EditorFor(vm => vm.Name, new { htmlAttributes = new { @class ="form-control"} }) 
    </div>
    
    <br />
    <div class="form-group">
        @Html.LabelFor(vm => vm.Couple)
        @Html.EditorFor(vm => vm.Couple, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <br />

    <div class="form-group">
        @Html.LabelFor(vm => vm.Club)
        @Html.EditorFor(vm => vm.Club, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <br />

    <div class="form-group">
        <input type="Submit" value="Edit" class="btn btn-info" />
    </div>
}

