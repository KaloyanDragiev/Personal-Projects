
@{
    ViewBag.Title = "Add";
}
<br />
<h2>Add</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <br />

    <label for="Name">Name: </label>
    <input type="text" name="Name" class="form-control" />
    <br />

    <label for="Description">Description: </label>
    <textarea id="Description" rows="10" cols="30" name="Description" class="form-control"></textarea>
    <br />

    <label for="StartDate">StartDate: </label>
    <input type="datetime" name="StartDate" class="form-control" />
    <br />

    <label for="EndDate">EndDate: </label>
    <input type="datetime" name="EndDate" class="form-control"/>
    <br />

    <label for="Organizer">Organizer: </label>
    <input type="text" name="Organizer" class="form-control"/>
    <br />

    <input type="submit" value="Add" class="btn btn-info"/>
}
